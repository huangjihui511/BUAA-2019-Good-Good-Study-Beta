/* miniprogram/pages/userpage/userpage.wxss */
@import "../../app.wxss";
@import "../shop/shop.wxss";

.invite {
  /* display: none; */
  width: 500rpx;
  font-size: 32rpx;
  height: 50rpx;
  line-height: 50rpx;
  padding-left: 150rpx;
  position: relative;
  margin: 20rpx auto 0 35rpx;
  background-color: #FFF0F5;
  border: 1px solid #FFB5C5;
  border-radius: 5px;
}

.invite:after {
  content: '';
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  top: 41rpx;
  left: 300rpx;
  transform: rotate(225deg);
  background-color: #FFF0F5;
  border: 1px #FFB5C5;
  border-style: solid none none solid ;
}

.userinfo {
  display:flex;
  flex-direction:row;
  flex: none;
  padding: 10px 0 0;
}

.userHead {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-left: 20rpx;
}

.line{
  width:100%;
  height:2rpx;
  background:#777777;
}

.swiper-tab{  
  width: 100%;  
  border-bottom: 2rpx solid #777777;  
  text-align: center;  
  line-height: 80rpx;}  
.swiper-tab-list{  
  font-size: 36rpx;  
  display: inline-block;  
  width: 50%; 
  color: #777777;  
}  
.active{ color: #da7c0c;  
  border-bottom: 5rpx solid #da7c0c;}  

.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden; }  
.swiper-box view{  
  text-align: center;  
}  

.content-item{
  width: 33%;
  height: 180rpx;
  background-color: rgb(233, 8, 87, 0);
  align-items: center;
  justify-content: center;
  /* 绝对定位的父级必须要定位 */
}

.content{
  display: flex;
  flex-wrap: wrap;
}

.image_button
{ 
  height: 110%;
  background-color: rgb(16, 75, 163, 0);
  align-items: center;
  justify-content: center;
}

.image_search{
  width: 100%;
  height: 100%;
  border: tomato;
  border-radius: 10%;
}
